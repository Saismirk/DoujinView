<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:DoujinView.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DoujinView.Views.SettingsControl"
             x:DataType="viewModels:SettingsViewModel">

    <StackPanel>
        <CheckBox Classes="setting" IsChecked="{CompiledBinding  JapaneseModeSetting}">Japanese Mode</CheckBox>
        <CheckBox Classes="setting" IsChecked="{CompiledBinding  ResumeLastArchiveSetting}">Resume Last Opened Archive</CheckBox>
        <CheckBox Classes="setting" IsChecked="{CompiledBinding  ResumeLastPageSetting}">Resume Previously Opened Page</CheckBox>
        <CheckBox Classes="setting" IsChecked="{CompiledBinding  LoadNextArchiveSetting}">Load Next Archive</CheckBox>
    </StackPanel>
</UserControl>